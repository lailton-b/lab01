{
  "compilerOptions": {
    "target": "ES2017",                                
    "module": "commonjs",                           
    "lib": ["ES6"],                                   
    "allowJs": true,                             
    "outDir": "./dist",                              
    "rootDir": "./",                             
    "removeComments": true,    
    "strict": true,  
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],                             
    "esModuleInterop": true,                        
    "experimentalDecorators": true,              
    "emitDecoratorMetadata": true,               
    "resolveJsonModule": true,
    "skipLibCheck": true,                           
    "forceConsistentCasingInFileNames": true        
  }
}